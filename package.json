{
  "name": "memoon-card",
  "version": "1.0.0",
  "description": "MemoOn Card - Intelligent flashcard system with FSRS spaced repetition algorithm",
  "author": "Waran-alt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Waran-alt/memoon-card.git"
  },
  "keywords": [
    "flashcards",
    "spaced-repetition",
    "fsrs",
    "memorization",
    "learning"
  ],
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:frontend": "yarn workspace @memoon-card/frontend dev",
    "dev:backend": "yarn workspace @memoon-card/backend dev",
    "build": "yarn workspaces foreach -A run build",
    "build:frontend": "yarn workspace @memoon-card/frontend build",
    "build:backend": "yarn workspace @memoon-card/backend build",
    "test": "yarn workspaces foreach -A run test",
    "test:e2e": "yarn workspace @memoon-card/frontend test:e2e",
    "test:e2e:report": "yarn workspace @memoon-card/frontend test:e2e:report",
    "lockfile:refresh": "bash scripts/lockfile-refresh.sh",
    "lint": "yarn workspaces foreach -A run lint",
    "type-check": "yarn workspaces foreach -A run type-check",
    "clean": "yarn workspaces foreach -A run clean",
    "migrate:up": "liquibase --changeLogFile=migrations/changelog.xml update",
    "migrate:status": "liquibase --changeLogFile=migrations/changelog.xml status"
  },
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=4.12.0"
  }
}
