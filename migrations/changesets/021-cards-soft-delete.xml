<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="021-cards-soft-delete" author="memo">
        <comment>Add soft delete for cards: keep row and FKs for study data; hide from listings and study.</comment>
        <addColumn tableName="cards">
            <column name="deleted_at" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <createIndex indexName="idx_cards_deleted_at" tableName="cards">
            <column name="deleted_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
