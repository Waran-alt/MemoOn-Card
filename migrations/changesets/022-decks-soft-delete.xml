<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="022-decks-soft-delete" author="memo">
        <comment>Add soft delete for decks: keep row and FKs so cards and study data remain; hide from listings.</comment>
        <addColumn tableName="decks">
            <column name="deleted_at" type="timestamp with time zone">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <createIndex indexName="idx_decks_deleted_at" tableName="decks">
            <column name="deleted_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
